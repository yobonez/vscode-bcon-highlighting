{
  "name": "lkon-syntax-highlighting",
  "displayName": "LKON Syntax highlighting",
  "description": "Syntax highlighting support for LKON.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "main":"./extension.ts",
    "commands": [
      {
        "command": "vscode-lkon.grammar-inject",
        "title": "LKON: .js Embedded syntax highlighting (grammar injection) (RELOAD REQUIRED)"
      }
    ],
    "languages": [{
      "id": "lkon",
      "aliases": ["Lena Krukov's Object Notation", "lkon"],
      "extensions": [".lkon"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "lkon",
      "scopeName": "source.lkon",
      "path": "./syntaxes/lkon.tmLanguage.json"
    },
    {
      "fileTypes":[".js"],
      "path": "./syntaxes/injection_working.json",
      "scopeName": "lkon.injection",
      "injectTo": ["source.js"]
    }
    ]
  }
}
